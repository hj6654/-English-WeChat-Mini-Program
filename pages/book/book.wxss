.bg {
  width: 100vw;
  height: 100vh;
  background-color: #fff;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.bln1 {
  width: 150px !important;
  margin-top: 30rpx;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.all {
  width: 100vw;
  height: 100%;
  margin: 0 auto;
  background-color: #FFFACD;
  display: flex;
  flex-direction: column;

}

.top {
  width: 90%;
  height: 20vh;
  position: relative;
  display: flex;
  justify-self: center;
  align-self: center;
  margin: 0 auto;
}

.top .pic {
  width: 150rpx;
  height: 150rpx;
  margin: auto 20rpx;
}

.top .pic image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.top .oth {
  position: relative;
  margin: auto 10rpx;
  flex: 1;
  height: 180rpx;
}

.top .oth .title {
  font-size: 40rpx;
  flex-wrap: wrap;
  margin-right: 10rpx;
}

.top .oth .text {
  font-size: 20rpx;
  margin-top: 20rpx;
}

.top .oth .jdt {
  width: 100%;
  height: 5vh;
  font-size: 20rpx;
  position: absolute;
  bottom: 10rpx;
  padding: auto auto;
  margin-right: 30rpx;
}

.top .oth .jdt .ar {
  display: flex;
  justify-content: space-between;
}

.top .oth .btn {
  width: 150rpx;
  height: 45rpx;
  font-size: 20rpx;
  background-color: #FFF;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
}