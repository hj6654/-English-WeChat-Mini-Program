.alt {
  width: 100vw;
  /* height: 100vh; */
  background-color: #fff;
  margin-bottom: 20rpx;
}

.day {
  width: 100%;
  height: 60rpx;
  font-size: 40rpx;
  padding: 5rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.day .daytime {
  width: 90%;
}

.day .line {
  width: 90%;
  height: 5rpx;
  background-color: #ccc;
}

.article {
  width: 90%;
  height: 200rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  display: flex;
  justify-self: center;
  align-self: center;
  flex-direction: column;
  background-color: #fff;
  border-radius: 30rpx;
  border: 5rpx solid #ccc;
}

.article .all {
  width: 90%;
  height: 90%;
  margin: auto auto;
  display: flex;
  justify-self: center;
  align-self: center;
  flex-direction: row;
  justify-content: space-between;
}

.article .pic {
  width: 150rpx;
  height: 150rpx;
  margin: auto 0;
}

.article .pic image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.article .oth {
  margin: 20rpx 0;
  width: 70%;
  word-wrap: break-word;
  overflow: hidden;
  position: relative;
}

.article .oth .title {
  font-size: 40rpx;
  flex-wrap: wrap;
  margin-right: 10rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.article .oth .tubiao {
  width: 20rpx;
  height: 20rpx;
}

.article .oth .time {
  font-size: 20rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}