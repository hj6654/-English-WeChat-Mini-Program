.bg {
  width: 100vw;
  height: 100vh;
  background-color: #fff;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.bln1 {
  width: 150px !important;
  margin-top: 30rpx;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.all {
  width: 100vw;
  height: 100%;
  margin: 0 auto;
  background-color: #FFFACD;
  display: flex;
  flex-direction: column;
}

.top {
  width: 100%;
  height: 20vh;
  position: relative;
  display: flex;
  justify-self: center;
  align-self: center;
}

.top .pic {
  width: 150rpx;
  height: 150rpx;
  margin: auto 20rpx;
}

.top .pic image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.top .oth {
  position: relative;
  margin: auto 10rpx;
  flex: 1;
  height: 180rpx;
}

.top .oth .title {
  font-size: 40rpx;
  flex-wrap: wrap;
  margin-right: 10rpx;
  width: 350rpx;
  overflow:hidden; 
  text-overflow:ellipsis; 
  white-space:nowrap; 
  
}

.top .oth .text {
  font-size: 20rpx;
  margin-top: 20rpx;
}

.top .oth .jdt {
  width: 100%;
  height: 5vh;
  font-size: 20rpx;
  position: absolute;
  bottom: 10rpx;
  padding: auto auto;
  margin-right: 30rpx;
}

.top .oth .jdt .ar {
  display: flex;
  justify-content: space-between;
}

.top .oth .btn {
  width: 150rpx;
  height: 45rpx;
  font-size: 20rpx;
  background-color: #FFF;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
}

.line {
  width: 95%;
  height: 3rpx;
  background-color: #ccc;
  margin: 20rpx auto;
}


.mid {
  width: 100%;
  position: relative;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  flex-direction: column;
  flex: 1;

}

.mid .plan {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  font-size: 35rpx;
  font-weight: 600;
}

.mid .word {
  width: 100%;
  height: 70%;
  margin-top: 80rpx;
  display: flex;
  text-align: center;
  justify-content: center;
}

.mid .word .allword {
  flex: 1;
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.mid .word .num {
  font-size: 80rpx;
  font-weight: 900;
  font-style: italic;
}

.onbtn {
  width: 100%;
}

.onbtn .btn {
  width: 400rpx;
  height: 80rpx;
  font-size: 30rpx;
  background-color: #FFEE52;
  border: 1rpx solid #ccc;
  border-radius: 30rpx;
  color: black;
  margin-bottom: 20vh;
  display: flex;
  justify-content: space-around;
  align-items: center;
}